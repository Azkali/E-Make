{
    "extends": ["tslint-angular", "../tslint.json"],
    "linterOptions": {
      "project": "./tsconfig.app.json"
    },
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
